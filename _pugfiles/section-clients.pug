section.white-section.section-clients

  h3#clients Clients

  .clients-mobile-nav {% for client in site.data.settings.clients %}
    span
    |{% endfor %}

  .clients-belt {% for client in site.data.settings.clients %}
    .client-unit.flex-row
      .client-face.flex-col
        img(alt="Client Face" src="assets/img/clients/{{ client.avatar }}")
        strong.client-name {{ client.name }}
        em.client-title {{ client.title }}

      .client-content
        .client-quote-mark {% include icons/icon-quote-mark.html %}
        | {{ client.quote }}

    | {% endfor %}

  .clients-logos {% for client in site.data.settings.clients %}
    img.client-logo(src="/assets/img/clients/{{ client.logo }}" alt="{{ client.logo }}")
    | {% endfor %}

  .client-controls
    .client-control-next {% include icons/icon-next.html %}
    .client-control-prev {% include icons/icon-prev.html %}
